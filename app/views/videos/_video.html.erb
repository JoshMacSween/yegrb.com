<% if index %>
<%= link_to video do %>
<h2 class="text-red"><%= video %></h2>
<% end %>
<% else %>
<h2><%= video %></h2>
<% end %>
<small class="text-muted">
    Posted by <%= video.user %> on <%= video.nice_created_at %>
</small>

<p class="text-center m-5">
    <%= video.video_url unless index%>
</p>

<% if index %>
<h5><%= video.speaker %></h5>
<% else %>
<table>
    <tr>
        <td class="pr-3"><strong><%= icon('fas', 'map-marked', title: 'Location') %> Speaker </strong></td>
        <% if video.speaker_url %>
        <td><%= link_to video.speaker, video.speaker_url %></td>
        <% else %>
        <td><%= video.speaker %></td>
        <% end %>
    </tr>
    <% if video.slides_url %>
    <tr>
        <td><strong><%= icon('fas', 'clock', title: 'Time') %> Slides </strong></td>
        <td><%= link_to video.slides_url %></td>
    </tr>
    <% end %>
    <tr>
        <td class="pr-3"><strong><%= icon('fas', 'map-marked', title: 'Location') %> Recorded at </strong></td>
        <td><%= video.recorded_at %></td>
    </tr>
    <tr>
        <td class="pr-3"><strong><%= icon('fas', 'map-marked', title: 'Location') %> Event </strong></td>
        <td><%= link_to video.event, video.event %></td>
    </tr>
</table>
<% end %>
<p class="mt-3">
    <%= index ? video.summary.truncate(40) : video.summary %>
</p>

<%= link_to 'Watch', video, class: 'sm-info' if index %>
<% if can? :edit, video %>
<%= link_to 'Edit', edit_video_path(video), class: 'sm-warning' %>
<%= link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' }, class: 'sm-danger' %>
<% end %>