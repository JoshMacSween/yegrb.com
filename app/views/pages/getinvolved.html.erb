<% @page_title = 'Get Involved' %>
<h1>Get Involved</h1>
<div class="row">
  <div class="col-12 col-lg-6"">
    <%= link_to "https://airtable.com/shrhvr3vpGV2Q0W68", target: '_blank' do %>
      <div class="dark-box d-flex">
        <div>
          <h3 class="text-red">Submit a topic</h3>
          <p>
            Suggest a topic or do a talk at one of our meetups using a quick airtable form.
          </p>
        </div>
        <div class="align-self-center ml-3">
          <%= image_tag "airtable.svg", class: 'small-icon' %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-12 col-lg-6"">
    <%= link_to "https://github.com/yegrb/yegrb.com", target: '_blank' do %>
      <div class="dark-box d-flex">
        <div>
          <h3 class="text-red">Open a PR</h3>
          <p>
            We appreciate pull requests on GitHub.
          </p>
        </div>
        <div class="align-self-center ml-3">
          <%= image_tag "github.svg", class: 'small-icon' %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-12">
    <%= link_to "https://devedmonton-invite.herokuapp.com/", target: '_blank' do %>
      <div class="dark-box d-flex">
        <div>
          <h3 class="text-red">Find us on Slack</h3>
          <p>
            Get an automated invite for the Dev Edmonton Society Slack, where hundreds of developers meet.
          </p>
        </div>
        <div class="align-self-center ml-3">
          <%= image_tag "devedmonton.svg", class: 'small-icon' %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-12">
    <div class="dark-box">
      <%= render 'messages/form' %>
    </div>
  </div>
</div>
