<% @page_title = 'Get Involved' %>
<h1>Get Involved</h1>
<div class="row">
    <div class="col-12 col-lg-6">
        <%= link_to "https://devedmonton-invite.herokuapp.com/", class: 'info' do %>
            <div class="container bg-black rounded shadow border-right border-orange p-4 mt-4 d-flex justify-content-between">
                <div>
                    <h3 class="text-orange">Find us on Slack</h3>
                    Get an automated invite for the Dev Edmonton Society Slack, where hundreds of developers meet.
                </div>
                <div class="align-self-center ml-3">
                    <%= image_tag "devedmonton.svg", class: 'small-icon' %>
                </div>
            </div>
        <% end %>
    </div>
    <div class="col-12 col-lg-6">
        <%= link_to "https://devedmonton-invite.herokuapp.com/", class: 'info' do %>
            <div class="container bg-black rounded shadow border-right border-orange p-4 mt-4 d-flex justify-content-between">
                <div>
                    <h3 class="text-orange">Submit a topic</h3>
                    Suggest a topic or do a talk at one of our meetups using a quick airtable form.
                </div>
                <div class="align-self-center ml-3">
                    <%= image_tag "airtable.svg", class: 'small-icon' %>
                </div>
            </div>
        <% end %>
    </div>
    <div class="col-12">
        <div class="container bg-black rounded shadow border-right border-orange p-4 mt-4 info">
            <h3 class="text-orange">Email Alan</h3>
            Contact me at alan@alanvardy.com for all other comments, questions, or concerns!
        </div>
    </div>
</div>




