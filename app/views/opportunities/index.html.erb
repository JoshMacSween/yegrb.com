<p id="notice"><%= notice %></p>

<h1>Opportunities</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Company</th>
      <th>Contact</th>
      <th>Email</th>
      <th>Paid position</th>
      <th>Content</th>
      <th>Good until</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opportunities.each do |opportunity| %>
      <tr>
        <td><%= opportunity.user_id %></td>
        <td><%= opportunity.title %></td>
        <td><%= opportunity.company %></td>
        <td><%= opportunity.contact %></td>
        <td><%= opportunity.email %></td>
        <td><%= opportunity.paid_position %></td>
        <td><%= opportunity.content %></td>
        <td><%= opportunity.good_until %></td>
        <td><%= link_to 'Show', opportunity %></td>
        <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
        <td><%= link_to 'Destroy', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Opportunity', new_opportunity_path %>
